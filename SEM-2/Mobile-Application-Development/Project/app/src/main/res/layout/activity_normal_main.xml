<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".hotel.normalSystem.NormalMainActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/man_engaged_household_task"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        android:contentDescription="Background AI Image" />

    <!-- Dark overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Normal System!"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="40dp" />

        <!-- New Button to Go to Table Selection -->
        <Button
            android:id="@+id/btnGoToTables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Table Selection"
            android:padding="12dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>