<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel.HomeActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/man_hanging_out_with_robot"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        android:contentDescription="Background AI Image" />

    <!-- Dark overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, User!"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/normalHotelButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Use Normal Hotel Management System"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:textSize="18sp"
            android:padding="12dp" />

        <Button
            android:id="@+id/aiTextHotelButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Use AI Text Hotel Management System"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/aiVoiceHotelButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Use AI Voice Hotel Management System"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:textSize="18sp"
            android:padding="12dp" />

    </LinearLayout>

</RelativeLayout>